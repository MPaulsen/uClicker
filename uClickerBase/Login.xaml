<Page x:Class="uClickerBase.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Login">

    <Grid>

        <TextBox Name="txtUser" HorizontalAlignment="Center" Height="23" Margin="50,27,50,0" VerticalAlignment="Top" Width="200"/>
        <PasswordBox Name="txtPass" HorizontalAlignment="Center" Height="23" Margin="50,78,50,0" VerticalAlignment="Top" Width="200" KeyDown="txtPass_KeyDown" />
        <Button Name="btnGuest" Content="Guest" HorizontalAlignment="Center" Margin="50,118,175,0" VerticalAlignment="Top" Width="75" Click="btnGuest_Click"/>
        <Button Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="175,118,50,0" VerticalAlignment="Top" Width="75" Click="btnLogin_Click"/>
        <Label Content="Username" HorizontalAlignment="Center" Margin="50,0,187,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="52,55,188,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
