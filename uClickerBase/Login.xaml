<Page x:Class="uClickerBase.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Login">

    <Grid>

        <TextBox Name="txtUser" HorizontalAlignment="Center" Height="23" Margin="0,10,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="200"/>
        <TextBox Name="txtPass" HorizontalAlignment="Center" Height="23" Margin="50,50,50,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="200"/>
        <Button Name="btnGuest" Content="Guest" HorizontalAlignment="Center" Margin="50,78,175,0" VerticalAlignment="Top" Width="75" Click="btnGuest_Click"/>
        <Button Name="btnLogin" Content="Login" HorizontalAlignment="Center" Margin="175,78,50,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
