<Page x:Class="uClickerBase.Results"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
	Title="Results">

    <Grid>
        <Label Name="lblQuestion" Content="This is a placeholder question and how would you respond?" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Name="lblPollCode" Content="PollCode" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Name="lblStatus" Content="Open" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontSize="15" Foreground="Lime"/>
        <StackPanel Name="stkResults" HorizontalAlignment="Stretch"  Margin="50,125,50,50" VerticalAlignment="Stretch" />
        <Button Content="Close" HorizontalAlignment="Left" Margin="32,0,0,10" VerticalAlignment="Bottom" Width="75" Click="btnClose_Click"/>
        <Button Content="Return" HorizontalAlignment="Right" Margin="0,0,32,10" VerticalAlignment="Bottom" Width="74" Click="btnReturn_Click"/>

    </Grid>
</Page>
